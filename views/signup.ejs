<% layout('layouts/boilerplate') %>
<h1>Sign up</h1>
<form action="/signup" method="POST" class="needs-validation" novalidate>
    <div class="mb-2">
        <label for="username" class="form-label"> </label>Enter your username: </label>
        <input type="text" id="username" name="user[username]" class="form-control" required>
    </div>
    <div class="mb-2">
        <label for="password" class="form-label">Enter your password: </label>
        <input type="password" name="user[password]" id="password" required class="form-control">
    </div>
    <button class="btn btn-primary">Create User!</button>
</form>