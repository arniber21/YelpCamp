<% layout('./layouts/boilerplate') %>
<h1>Edit Campground</h1>
<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" class="needs-validation" novalidate>
    <div class="mb-2">
        <div class="mb-2">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" class="form-control" name="campground[title]" value="<%= campground.title %>" required>
        </div>
        <div class="mb-2">
            <label for="location" class="form-label">Location</label>
            <input type="text" id="location" name="campground[location]" class="form-control" value="<%= campground.location %>" required>
        </div>
        <div class="mb-2">
            <label for="image" class="form-label">Image URL</label>
            <input type="text" id="image" class="form-control" name="campground[image]" value="<%= campground.image %>" required>
        </div>
        <div class="mb-2">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" id="description" class="form-control" name="campground[description]"  required><%= campground.description %></textarea>
        </div>
        <div class="mb-5">
            <label for="price" class="form-label">Price</label>
            <input type="number" id="price" class="form-control" min="10" name="campground[price]" value="<%= campground.price %>" required>
        </div>
        <button class="btn btn-primary">Update Campground</button>
        <a href="/campgrounds/<%= campground._id%>" class="btn btn-danger">Cancel</a>
    </div>
</form>