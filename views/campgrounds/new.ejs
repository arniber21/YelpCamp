<% layout('./layouts/boilerplate') %>
<h1>New Campground</h1>
<form action="/campgrounds" method="POST">
    <div class="mb-2">
        <div class="mb-2">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" class="form-control" name="campground[title]">
        </div>
        <div class="mb-2">
            <label for="location" class="form-label">Location</label>
            <input type="text" id="location" name="campground[location]" class="form-control">
        </div>
        <div class="mb-2">
            <label for="image" class="form-label">Image URL</label>
            <input type="text" id="image" class="form-control" name="campground[image]">
        </div>
        <div class="mb-2">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" id="description" class="form-control" name="campground[description]"></textarea>
        </div>
        <div class="mb-5">
            <label for="price" class="form-label">Price</label>
            <input type="number" id="price" class="form-control" min="10" name="campground[price]">
        </div>
        <button class="btn btn-primary">Add Campground</button>
        <a href="/campgrounds" class="btn btn-secondary">All Campgrounds</a>
    </div>
</form>